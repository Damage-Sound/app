<div class="container">

    <div class="title-rank">
        <h1>Ranking</h1>
        <h5>Best <strong>tracks</strong> on Damage Sound</h5>
    </div>

    <div class="row justify-content-center align-items-center row-rank-btns">
        <div class="col-md-3">
        </div>

        <div class="col-md-3">
            <form action="/rank/likes" method="POST">
                <button type="submit" class="btn btn-rank btn-dark btn-block btn-lg">By likes</button>
            </form>
        </div>

        <div class="col-md-3">
        <form action="/rank/plays" method="POST">
            <button type="submit" class="btn btn-rank btn-dark btn-block btn-lg">By plays</button>
        </form>
        </div>

        <div class="col-md-3">
        </div>

    </div>

    <div class="row justify-content-center align-items-center">

        {{#each theData}}
            <div class="col-md-4 col-songs">
                <img src="{{cover}}" alt="song cover" class="song-cover-ranking " class="img-rank">
                <h4 class="song-title">{{name}}</h4>
                <a href="/artist/{{author.id}}" class="small-author"><small>{{author.username}}</small></a>
                <p class="song-plays">{{plays.total}} <img class="flaticon-img" src="/images/play.svg" alt="like"></p>
                <p class="song-likes">{{likes}}  <img class="flaticon-img" src="/images/heart2.svg" alt="like"></p>
                <button class="play-button-like playButton" media="{{url}}" songID="{{id}}">Play</button>
                <button class="play-button-like likeButton" media="{{url}}" songID="{{id}}">Like</button>
            </div>
        {{/each}}

    </div>



</div>

<script src="/javascripts/userActions.js"></script>
<script src="/javascripts/apiHandler.js"></script>
<script src="/javascripts/likeMiddleware.js"></script>
<script src="/javascripts/playMiddleware.js"></script>
<script src="/javascripts/webplayer.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>