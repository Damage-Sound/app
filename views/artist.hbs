<div class="container">

    <div class="row">

        <div class="col-md-2">
            <img class='profileImg' src="{{user.profileImg}}" alt="Profile Image"> <br>
            <small>{{user.location}}</small> <hr>
        </div>

        <div class="col-md-10">
            <h3>{{user.username}}</h3>
            <a class="a-buttons" href="/colab/{{user.id}}">Ask for collaboration</a>
        </div>


    </div>
    <div class="row">

        <p><button><img class="flaticon-img" src="/images/heart2.svg" alt="like"></button> {{user.likes}}</p>

    </div>


    <h3>Albums</h3>
    <div class="row albums-artist-row">

        {{#each albums}}
        <div class="col-md-3">
            <a href="http://damage-sound.herokuapp.com/album/{{this.id}}">
                <article class="album-container">
                    <figure class="album-cover-container"><img src="{{this.cover}}" alt="album cover"
                            class="album-cover-img coverImg"></figure>
                    <h4 class="album-title">{{this.name}}</h4>
                </article>
            </a>
        </div>
        {{/each}}

    </div>

    <h3>Playlists</h3>
    <div class="row albums-artist-row">

        {{#each playlists}}
        <div class="col-md-3">
            <a href="http://damage-sound.herokuapp.com/playlist/{{this.id}}">
                <article class="playlist-container">
                    <h4 class="playlist-title">{{this.name}}</h4>
                </article>
            </a>
        </div>
        {{/each}}


    </div>

    

        <h3>Songs</h3>
        <div class="row album-artist-row">
            {{#each songs}}
            <div class="col-md-3">

                <h4 class="song-title">{{this.name}}</h4>
                <p class="song-plays">{{this.plays.total}} <img class="flaticon-img play-img" src="/images/play.svg" alt="like"></p>
                <p class="song-likes">{{this.likes}} <img class="flaticon-img" src="/images/heart2.svg" alt="like"></p>
                <button class="play-button-like" media="{{this.url}}" songid="{{this.id}}">Play</button>
                <button class="play-button-like" songid="{{this.id}}">Like</button>
            
            </div>
            {{/each}}
        </div>
        {{/each}}
    </div>











</div>









<section class="playlists-section">

</section>



</div>

<script src="/javascripts/userActions.js"></script>
<script src="/javascripts/apiHandler.js"></script>
<script src="/javascripts/likeMiddleware.js"></script>
<script src="/javascripts/playMiddleware.js"></script>
<script src="/javascripts/webplayer.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>